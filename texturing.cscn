material "Relief"
{
	pass
	{
		ambient 0.5 0.5 0.5 1.0
		diffuse 0.4 0.4 0.4 1.0
		emissive 0.0 0.0 0.0 1.0
		specular 0.1 0.1 0.1 1.0
		shininess 50

		texture_unit
		{
			image "Texturing/Diffuse.bmp"
			colour 1.0 1.0 1.0 1.0
			channel diffuse
			sampler	"Linear"
		}

		texture_unit
		{
			image "Texturing/Normal.bmp"
			colour 1.0 1.0 1.0 1.0
			channel normal
			sampler	"Linear"
		}

		hl_shader_program
		{
			file sm_2 "Relief/Relief.hl"
			
			vertex_program
			{
				entry "mainVx"
			}
			
			pixel_program
			{
				entry "mainPx"

				variable "LinearSearchSteps"
				{
					type int
					value 20
				}

				variable "BinarySearchSteps"
				{
					type int
					value 5
				}

				variable "Depth"
				{
					type float
					value 0.075
				}

				variable "Tile"
				{
					type float
					value 1.0
				}
			}
		}

		gl_shader_program
		{
			vertex_program
			{
				file sm_4 "Relief/Relief-4.x.vert"
				file sm_3 "Relief/Relief-3.x.vert"
				file sm_2 "Relief/Relief.vert"
			}
			
			pixel_program
			{
				file sm_4 "Relief/Relief-4.x.frag"
				file sm_3 "Relief/Relief-3.x.frag"
				file sm_2 "Relief/Relief.frag"

				variable "LinearSearchSteps"
				{
					type int
					value 20
				}

				variable "BinarySearchSteps"
				{
					type int
					value 5
				}

				variable "Depth"
				{
					type float
					value 0.075
				}

				variable "Tile"
				{
					type float
					value 1.0
				}
			}
		}
	}
}


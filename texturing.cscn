sampler "Linear"
{
	min_filter		linear
	mag_filter		linear
	min_lod			-500.0
	max_lod			500.0
	lod_bias		0.0
	u_wrap_mode		clamp_to_edge
	v_wrap_mode		clamp_to_edge
	w_wrap_mode		clamp_to_edge
	border_colour	0.0 0.0 0.0 0.0
}

material "DiffuseMap"
{
	pass
	{
		ambient 0.0745	0.0745	0.0745 1.0
		diffuse 0.75164	0.75164	0.75164 1.0
		emissive 0.0 0.0 0.0 1.0
		shininess 50.2
		two_sided true

		texture_unit
		{
			image "Texturing/Diffuse.bmp"
			colour 1.0 1.0 1.0 1.0
			channel diffuse
			sampler	"Linear"
		}
	}
}


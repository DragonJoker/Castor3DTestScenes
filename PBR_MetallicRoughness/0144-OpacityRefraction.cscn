materials metallic_roughness

scene "Scene"
{
	ambient_light 1.0 1.0 1.0

	skybox
	{
		equirectangular "Textures/cityCenterSkybox.hdr" 1024
	}

	sampler "Linear"
	{
		min_filter linear
		mag_filter linear
		min_lod 0.0
		max_lod 0.0
		lod_bias 0.0
		u_wrap_mode clamp_to_edge
		v_wrap_mode clamp_to_edge
		w_wrap_mode clamp_to_edge
		border_colour float_opaque_black
	}

	material "Textured"
	{
		pass
		{
			albedo 0.75164	0.75164	0.75164 1.0
			metallic 0.628281
			roughness 0.2
			two_sided true
			mixed_interpolation true
			refraction_ratio 0.92

			texture_unit
			{
				channel opacity
				sampler "Linear"
				image "Textures/Rusted/opacity.png"
			}
			refractions true
		}
	}

	scene_node "SunLightNode1"
	{
		orientation 1 0 0 45
	}
	light "SunLight1"
	{
		parent "SunLightNode1"
		type directional
		colour 1.0 1.0 1.0
		intensity 0.8 1.0
	}

	scene_node "FinalNode"
	{
		position 0.0 0.0 0.0
	}
	object "FinalPrimitive"
	{
		parent "FinalNode"
		mesh "Mesh"
		{
			type "cube" -width=50 -height=50 depth=50
		}
		material "Textured"
	}

	scene_node "MainCameraNode"
	{
		position 87.3926 -3.91655 -82.7833
		orientation -0.0337855 -0.999314 -0.0151473 48.3264
	}
	camera "MainCamera"
	{
		parent "MainCameraNode"
		primitive triangle_list
		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.333
			near 0.1
			far 20000.0
		}
	}
}

window "Window"
{
	render_target
	{
		format argb32
		size 800 600
		scene "Scene"
		camera "MainCamera"
	}
	fullscreen false
	vsync false
}


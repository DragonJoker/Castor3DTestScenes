material "cornea"
{
	pass
	{
		diffuse 0.000000 0.000000 0.000000 0.00392157
		specular 1.00000 1.00000 1.00000 0.00392157
		shininess 128.0
		alpha 0.119661
		alpha_blend_mode interpolative
		two_sided true
	}
}


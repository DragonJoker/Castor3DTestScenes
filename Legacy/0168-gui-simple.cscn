			background_material "Retour"
			highlighted_background_material "RetourMO"
			pushed_background_material "RetourMO"
			pixel_border_size 0 0 0 0
		}

		button "Menu/Continuer"
		{
			pixel_position 32 480
			pixel_size 128 64
			background_material "Continuer"
			highlighted_background_material "ContinuerMO"
			pushed_background_material "ContinuerMO"
			pixel_border_size 0 0 0 0

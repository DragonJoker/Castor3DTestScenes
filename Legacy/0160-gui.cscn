materials phong

font "Arial_11"
{
	file "arial.ttf"
	height 11
}

font "Arial_22"
{
	file "arial.ttf"
	height 22
}

material "DarkerBlue"
{
	pass
	{
		diffuse 0.0 0.0 0.25 1.0
	}
}

material "ColourMap"
{
	pass
	{
		diffuse 0.0745 0.0745 0.0745 1.0

		texture_unit
		{
			image "Textures/Bricks/Diffuse.jpg"
			channel diffuse
		}
	}
}

material "BtnTexture"
{
	pass
	{
		diffuse 0.0745 0.0745 0.0745 1.0

		texture_unit
		{
			image "Textures/Gui/button.png"

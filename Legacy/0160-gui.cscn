scene "Scene"
{
	background_image "Textures/background.jpg"
	ambient_light 0.2 0.2 0.2

	scene_node "MainCameraNode"
	{
		position 0.0 0.0 -100.0
	}
	camera "MainCamera"
	{
		parent "MainCameraNode"
		primitive triangle_list
		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.333
			near 0.1
			far 20000
		}
	}
}

window "Window"
{
	render_target
	{
		format argb32
		size 1920 1080
		scene "Scene"
		camera "MainCamera"
	}
	fullscreen false
	vsync false
}
